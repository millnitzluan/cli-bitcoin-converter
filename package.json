{
  "name": "cli-bitcoin-converter",
  "version": "1.0.0",
  "description": "A CLI to convert Bitcoin to any currency provided.",
  "main": "index.js",
  "scripts": {
    "clear": "rimraf bin",
    "build": "npm run clear && ./node_modules/.bin/babel --out-dir bin src",
    "build:watch": "npm run build -- --watch",
    "lint": "./node_modules/.bin/eslint src/*.js",
    "prepush": "npm run lint",
    "test": "./node_modules/.bin/mocha tests/**/*.spec.js --require babel-register --reporter nyan",
    "test:tdd": "npm run test -- --watch",
    "test:coverage": "nyc npm test"
  },
  "preferGlobal": true,
  "bin": {
    "btc-converter": "bin/main.js"
  }
  "nyc": {
    "functions": 80,
    "lines": 80,
    "check-coverage": 80,
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luanmillnitz/cli-bitcoin-converter.git"
  },
  "keywords": [
    "js",
    "tdd",
    "library"
  ],
  "author": "Luan Millnitz <luanmillnitz@gmail.com> (https://github.com/luanmillnitz)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/luanmillnitz/cli-bitcoin-converter/issues"
  },
  "homepage": "https://github.com/luanmillnitz/cli-bitcoin-converter#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "eslint": "^4.13.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "husky": "^0.14.3",
    "mocha": "^4.0.1",
    "nyc": "^11.4.1"
  },
  "dependencies": {
    "jscs": "^3.0.7"
  }
}
